<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".OnlineDictionaryActivity" >

    <ImageButton
        android:id="@+id/btnImgCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edTxtWord"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/edTxtWord"
        android:onClick="onClickCheck"
        android:src="@drawable/search_icon"
        android:contentDescription="@string/btnImgCheck" />
    
    <TextView 
        android:id="@+id/texViewWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edTxtWord"
        android:layout_below="@+id/btnImgCheck"
        android:layout_marginTop="16dp"
        android:maxLines="30"
        android:scrollbars="vertical"
        android:text="@string/txtWord"
        android:textColor="#FFFFFF"
        android:typeface="sans" /> 
           
    <EditText
        android:id="@+id/edTxtWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:ems="10"
        android:hint="@string/Define_Word" />

</RelativeLayout>